<p id="notice"><%= notice %></p>

<h1>Interest Calculations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    <tr>
      <th><%= sortable 'id', 'ID' %></th>
      <th><%= sortable 'principal_amount', 'Principal amount (£)' %></th>
      <th><%= sortable 'interest_rate', 'Interest rate (%)' %></th>
      <th><%= sortable 'duration', 'Duration (years)' %></th>
      <th><%= sortable 'frequency', 'Frequency per year' %></th>
      <th><%= sortable 'final_amount', 'Final Amount (£)' %></th>
    </tr>
  </thead>

  <tbody>

    <% @interest_calculations.each do |interest_calculation| %>
      <tr>
        <td><%= interest_calculation.id %></td>
        <td><%= interest_calculation.principal_amount %></td>
        <td><%= interest_calculation.interest_rate %></td>
        <td><%= interest_calculation.duration %></td>
        <td><%= interest_calculation.frequency %></td>
        <td><%= number_with_precision(interest_calculation.final_amount, :precision => 2) %></td>
        <td><%= link_to 'Edit', edit_interest_calculation_path(interest_calculation) %></td>
        <td><%= link_to 'Delete', interest_calculation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Interest Calculation', new_interest_calculation_path %>
